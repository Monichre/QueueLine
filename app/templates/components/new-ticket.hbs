{{#if addNewTicket}}
<div class="newTicket">
  <h2>Jump on the Queue</h2>
    <form>
      <div class="form-group">
        <label for="author">Names</label><br>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="topic">Topic</label><br>
        {{input value=topic id="topic"}}
      </div>

      <div class="form-group">
        <label for="question">What's your question?</label><br>
        {{input value=question id="question"}}
      </div>
      <button {{action 'save'}}>Save</button>
    </form>

</div><!--end of newTicket-->
{{else}}
  <button {{action 'ticketFormShow'}}>New Ticket</button>
{{/if}}
