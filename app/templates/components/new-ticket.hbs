{{#if addNewTicket}}
  <h2>Jump on the Queue</h2>
    <form>
      <div class="form-group">
        <label for="author">Names</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="topic">Topic</label>
        {{input value=topic id="topic"}}
      </div>

      <div class="form-group">
        <label for="Question">What's your question?</label>
        {{input value=question id="question"}}
      </div>

    </form>
{{else}}
  <button {{action 'ticketFormShow'}}>New Ticket</button>
{{/if}}
